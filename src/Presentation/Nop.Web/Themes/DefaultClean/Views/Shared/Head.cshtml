@using Nop.Core.Domain.Catalog
@using Nop.Services.Helpers

@inject CatalogSettings catalogSettings
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper

@{
    Layout = "";
    var themeName = await themeContext.GetWorkingThemeNameAsync();

    // Css
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/reset.css");
    NopHtml.AppendCssFileParts($"https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css");
    NopHtml.AppendCssFileParts($"https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css");
    NopHtml.AppendCssFileParts($"~/Themes/{themeName}/Content/css/styles.css");

    // Js
    NopHtml.AppendScriptParts(ResourceLocation.Footer,
    "https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.7/dist/umd/popper.min.js");

    NopHtml.AppendScriptParts(ResourceLocation.Footer,
    "https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js");
}