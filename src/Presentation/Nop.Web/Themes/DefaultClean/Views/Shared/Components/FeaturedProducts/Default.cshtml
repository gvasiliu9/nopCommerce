@model FeaturedProductsModel

<div id="featured-products">
    @foreach (var category in Model.Products)
    {
        @if (category.Value?.Any() ?? false)
        {
            <h1>@category.Key</h1>
            <div class="row featured-products-row">
                @foreach (var product in category.Value)
                {
                    <div class="col-12 col-md-6 col-lg-3">
                        @await Html.PartialAsync("_ProductBox", product)
                    </div>
                }
            </div>
            <div class="d-flex justify-content-center featured-products-arrows my-4">
                <div class="h-stack gap-3">
                    <button type="button" class="btn">
                        <i class="fas fa-circle-arrow-left"></i>
                    </button>
                    <button type="button" class="btn">
                        <i class="fas fa-circle-arrow-right"></i>
                    </button>
                </div>
            </div>
        }
    }
</div>
