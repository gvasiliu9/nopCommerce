@model HeaderTopLinksModel
@using Nop.Core.Domain.Customers
@using Nop.Core.Domain.Topics
@inject Nop.Core.IWebHelper webHelper

<div class="col-12 d-flex align-items-center header-top-links">
    @await Component.InvokeAsync(typeof(LanguageSelectorViewComponent))
    @foreach (var topic in Model.Topics.ToList())
    {
        <a href="@(Url.RouteUrl<Topic>(new { SeName = topic.SeName }))">
            <i class="fas fa-box pe-2"></i> @topic.Name
        </a>
    }
    <span>
        <i class="fas fa-calendar pe-2"></i> @T("WorkingHours")
    </span>
    <a id="call-us" href="tel:+1234567890">
        <i class="fas fa-phone pe-2"></i> @Model.PhoneNumber
    </a>
</div>